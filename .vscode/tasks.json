{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Typescript",
			"type": "shell",
			"command": "npm run build",
			"isBackground": false,
			"problemMatcher": ["$tsc"],
			"group": "build"
		},
		{
			"label": "Start Live Server",
			"type": "shell",
			"command": "npx live-server public --mount=/dist:./dist --mount=/styles:./src/styles --port=5567 --no-browser",
			"isBackground": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": [
				{
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
				}
				],
				"background": {
				"activeOnStart": true,
				"beginsPattern": "Starting up .*",
				"endsPattern": "Ready for changes"
				}
			}
		},

		{
			"label": "Dev: Build and Serve",
			"dependsOn": ["Compile Typescript", "Start Live Server"],
			"dependsOrder": "sequence", // or "parallel" if you want both to start at the same time
			"problemMatcher": []
		}
	]
}